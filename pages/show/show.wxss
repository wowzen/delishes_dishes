
.container {
  margin-bottom: 32px;
  padding-bottom: 32px;
  display: flex;

}

.card {
  width: 100%;
  background: white;
  border-radius: 4px;
  margin: 32rpx 0;
  box-shadow: 2px 2px 84px rgba(0,0,0,0.2);
  padding: 16rpx;
  box-sizing: border-box;
}

.card-name {
  display: flex;
  font-family: Roboto;
  font-style: bold;
  font-size:64rpx;
  }

.card-des {
  font-size: 36rpx;
  color: #666;
  margin: 50rpx 50rpx;
  text-align: center;
  }

.card-image {
border-radius: 8%;
}

.likes {
  position: relative;
  display: inline-flex;
  margin-top: 32px;
  padding-left: 12px;
}


.like_count {
  position: relative;
  padding-right: 12px;
 }
 
 .like_heart {
   width: 64rpx;
   height: 64rpx;
   margin-left: 32rpx;
 }

 .btn {
   margin-top: 32rpx;
 }